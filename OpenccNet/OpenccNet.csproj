<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <Version>1.4.0</Version>  <!-- NuGet + Tool version -->
        <AssemblyVersion>1.4.0.0</AssemblyVersion>
        <FileVersion>1.4.0.0</FileVersion>
        <InformationalVersion>1.4.0</InformationalVersion>
        <IncludeSourceRevisionInInformationalVersion>false</IncludeSourceRevisionInInformationalVersion>

        <!-- Tool-specific properties -->
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>openccnet</ToolCommandName>
        <PackageId>openccnet.cli</PackageId>
        <Authors>Laisuk Lai</Authors>
        <Description>Convert text and Office files using OpenccNetLib with CLI support.</Description>
        <PackageOutputPath>./nupkg</PackageOutputPath>
        <ApplicationIcon>assets\icon.ico</ApplicationIcon>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <LangVersion>10</LangVersion>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DebugSymbols>true</DebugSymbols>
        <DebugType>none</DebugType>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="PdfPig" Version="0.1.13"/>
        <PackageReference Include="System.CommandLine" Version="2.0.2" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\OpenccNetLib\OpenccNetLib.csproj"/>
    </ItemGroup>

    <Target Name="Trim_Docs_And_Symbols_FromPublish"
            AfterTargets="ComputeFilesToPublish">
        <ItemGroup>
            <!-- Remove dependency XML docs -->
            <ResolvedFileToPublish Remove="@(ResolvedFileToPublish)"
                                   Condition="'%(ResolvedFileToPublish.Extension)' == '.xml'"/>

            <!-- Remove dependency PDB symbols -->
            <ResolvedFileToPublish Remove="@(ResolvedFileToPublish)"
                                   Condition="'%(ResolvedFileToPublish.Extension)' == '.pdb'"/>

            <!-- Remove unused dict payloads coming from OpenccNetLib package -->
            <ResolvedFileToPublish Remove="@(ResolvedFileToPublish)"
                                   Condition="$([System.String]::Copy('%(ResolvedFileToPublish.RelativePath)').Replace('\','/')) == 'dicts/dictionary_maxlength.cbor'"/>
            <ResolvedFileToPublish Remove="@(ResolvedFileToPublish)"
                                   Condition="$([System.String]::Copy('%(ResolvedFileToPublish.RelativePath)').Replace('\','/')) == 'dicts/dictionary_maxlength.json'"/>

        </ItemGroup>
    </Target>

</Project>

