{
  "name": "OpenccNet Dev",
  "image": "mcr.microsoft.com/dotnet/sdk:8.0",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "mounts": [
    // Speed up builds by persisting the NuGet cache between sessions
    "type=volume,source=nuget-cache,target=/home/vscode/.nuget/packages"
  ],
  "postCreateCommand": "dotnet --info && dotnet restore OpenccNet.sln && dotnet build OpenccNet.sln -c Release && dotnet test OpenccNet.sln -c Release --logger \"trx;LogFileName=test-results.trx\"",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-vscode.test-adapter-converter",
        "editorconfig.editorconfig"
      ],
      "settings": {
        "dotnet.server.useOmnisharp": false,
        "dotnet.defaultSolution": "OpenccNet.sln",
        "dotnet.acquisitionExtension.enableTelemetry": false,
        "testing.automaticallyOpenPeekView": "never"
      }
    }
  }
}
